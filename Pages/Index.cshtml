@page
@using LocalHomepage.Models
@model IndexModel
@{
    ViewData["Title"] = "导航";

    var items = ViewData["NavItems"] as IList<NavigationItem>;
}
<div class="row">
    @if (items == null)
    {
        <div class="card">
            <div class="card-header">
                Generation error!
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    导航生成出现错误
                </h5>
            </div>
        </div>
    }
    else
    {
        @foreach (var item in items)
        {
            <div class="col-sm-6 py-2">
                <div class="card">
@*                  
                    <div class="card-header">
                        @item.Header
                    </div>
*@
                    <div class="card-body">
                        <h5 class="card-title">
                            @item.Title
                        </h5>
                        <p class="card-text fs-6">
                            <a href="@item.Url" target="_blank" style="text-decoration: none;">
                                @item.Url
                            </a>
                        </p>
                        @if (item.Description.Length > 0)
                        {
                            <p class="card-text">
                                @item.Description
                            </p>
                        }
                        <div class="d-grid gap-2">
                            <a href="@item.Url" class="btn btn-primary" target="_blank">
                                访问
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
